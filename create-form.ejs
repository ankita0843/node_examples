        <div class="row" style="margin-top: 30px" ng-repeat="question in questions track by $index">
            <div class="col-xs-9 create-question-container">
                <div class="row header-row-2">
                    Create Question No: {{$index + 1}}
                </div>
                <br><br>
                <div class="row create-question">
                    <div class="col-xs-4">
                        <p>Question Title</p>
                    </div>
                    <div class="col-xs-8">
                        <input type="text" id="question-title-{{$index+1}}" class="custom-input" style="width: 85%"
                               placeholder="ENTER QUESTION TITLE">
                    </div>
                </div>
                <hr>
                <div class="row question-options">
                    <p>Question Options:</p>
                    <hr>
                    <div class="row" style="padding: 0 10px;">
                        <div class="col-xs-6">
                            <input type="text" id="question-option-{{$index+1}}-0" class="custom-input"
                                   placeholder="VERY POOR" data-value="0" value="Very Poor">
                            <span>Value: 0</span>
                        </div>
                        <div class="col-xs-6">
                            <input type="text" id="question-option-{{$index+1}}-1" class="custom-input"
                                   placeholder="POOR" data-value="1" value="Poor">
                            <span>Value: 1</span>
                        </div>
                    </div>
                    <div class="row" style="padding: 0 10px;">
                        <div class="col-xs-6">
                            <input type="text" id="question-option-{{$index+1}}-2" class="custom-input" placeholder="OK"
                                   data-value="2" value="Ok">
                            <span>Value: 2</span>
                        </div>
                        <div class="col-xs-6">
                            <input type="text" id="question-option-{{$index+1}}-3" class="custom-input"
                                   placeholder="GOOD" data-value="3" value="Good">
                            <span>Value: 3</span>
                        </div>
                    </div>
                    <div class="row" style="padding: 0 10px;">
                        <div class="col-xs-6">
                            <input type="text" id="question-option-{{$index+1}}-4" class="custom-input"
                                   placeholder="VERY GOOD" data-value="4" value="Very Good">
                            <span>Value: 4</span>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="row related-row">
                    <div class="checkbox">
                        <label>
                            <input checked ng-click="checkSelected($index+1)" type="checkbox" id="relationship-exists-{{$index + 1}}">Related Question Exists?
                        </label>
                    </div>
                    <div id="related-fields-div-{{$index+1}}">
                        <div class="row">
                            <div class="col-xs-5"><p>Related Question No:</p></div>
                            <div class="col-xs-5">
                                <input type="number" id="related-question-no-{{$index+1}}" class="custom-input">
                            </div>
                        </div>
                        <div class="row" style="margin-top: 10px">
                            <div class="col-xs-5"><p>Related How?</p></div>
                            <div class="col-xs-5">
                                <select id="related-dropdown-{{$index+1}}" class="form-control custom-select">
                                    <option value="direct">Direct</option>
                                    <option value="inverse">Inverse</option>
                                </select>
                            </div>
                        </div>
                        <hr>
                    </div>

                </div>
                <div class="row related-row">
                    <div class="row">
                        <div class="col-xs-4"><p>Importance: </p></div>
                        <div class="col-xs-6">
                            <input type="number" id="importance-{{$index+1}}" class="custom-input" min="0" max="10"
                                   placeholder="MIN:0 MAX:10" style="width: 70%">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        <div class="col-xs-4"><p>Thought Provoking: </p></div>
                        <div class="col-xs-6">
                            <input type="number" id="thought-provoking-{{$index+1}}" class="custom-input" min="0"
                                   max="5" placeholder="MIN:0 MAX:5" style="width: 70%">
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="row related-row">
                    <div class="col-xs-4 custom-button-done" ng-click="saveQuestion($index + 1)">
                        <i class="fa fa-floppy-o"></i><span>Done</span>
                    </div>
                    <div class="col-xs-4 custom-button-edit" ng-click="editQuestion($index + 1)">
                        <i class="fa fa-pencil-square-o"></i><span>Edit</span>
                    </div>
                </div>
                <hr>
            </div>

        </div>
        <div class="row" style="margin-top: 30px" ng-repeat="textQuestion in textQuestions track by $index">
            <div class="col-xs-9 create-question-container">
                <br><br>
                <div class="row create-question">
                    <div class="col-xs-4">
                        <p>Text Question Title</p>
                    </div>
                    <div class="col-xs-8">
